.header {
  position: relative;
  min-height: 230px;
}
.header-bg {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    width: 100%;
    height: 142px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    background: #8dc63f;
}
.header-bg image {
      width: 100%;
      height: 100%;
}
.header-bg-black {
    position: absolute;
    left: 0;
    top: 142px;
    bottom: 0;
    z-index: 1;
    background-color: #ffffff;
    width: 100%;
    -webkit-transition: background-color 0.2s;
    transition: background-color 0.2s;
}
.header-bg-gray {
    position: absolute;
    left: 0;
    top: 142px;
    bottom: -16px;
    z-index: 1;
    background-color: #eee;
    width: 100%;
    -webkit-transition: background-color 0.2s;
    transition: background-color 0.2s;
}
.header-top-Placeholder {
    height: 105px;
}
.header .storeInfo {
    position: relative;
    z-index: 2;
    background: #ffffff;
    height: 100px;
    border-radius: 6px;
    padding: 12px;
    margin-bottom: 4px;
    -webkit-transition: all 0.2s;
    transition: all 0.2s;
}
.header .storeInfo .shrink-box {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      text-align: center;
      font-size: 20px;
      color: #a2a8ab;
}
.header .storeInfo .storeAvatar {
      position: absolute;
      width: 50px;
      height: 50px;
      right: 16px;
      top: -25px;
      background: #ffffff;
      border-radius: 4px;
}

